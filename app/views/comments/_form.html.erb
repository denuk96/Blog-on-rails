<div class="container">
  <div class="coments">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card text-center" id="form_comment">
          <h2>Leave a comment:</h2>
          <%= form_with(model: [ @post, @post.comments.build ]) do |form| %>
            <!--# ancestry-->
            <%= form.hidden_field :parent_id %>
            <p>
              <%= form.label :comment, id:'hide_label_form_new'  %><br>
              <%= form.text_area :comment, class:'form-control' %>
            </p>
            <p>
              <%= form.submit class:'btn btn-info btn-lg', class:'form-control', id:'hide_button_form_new'%>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>