<div class="container">
  <div class="coments">
    <div class="row justify-content-left">
      <div class="col-md-8">
        <div class="card text-center">
          <p class="field">
            By <strong><%= comment.author.full_name  %></strong> <br>
           <span class="com_created"> Left  <span data-toggle="tooltip" data-placement="top" title="(<%=comment.created_at  %>)">
              <%= time_ago_in_words(comment.created_at) %>
            </span> ago..</span>
          </p>
          <p class="field">
            "<%= comment.comment %>"
            <% if updated(comment) %>
              <p class="updated" italic">Edited <span data-toggle="tooltip" data-placement="top" title="(<%=comment.updated_at  %>)">
                <%= time_ago_in_words(comment.updated_at) %>
              </span> ago..</p>
             <% end  %>
          </p>
            <p>
          <p><%= comment.likes.count %> <%= (comment.likes.count) == 1 ? 'Like' : 'Likes'%></p>
              <% if current_user %>
                <%= link_to 'Like', post_comment_likes_path(@post, comment), method: :post, class: 'btn btn-success btn-sm' %>


                <div class="btn-group" role="group" aria-label="Basic example">


                  <%= link_to "Reply", new_post_comment_path(comment.post, :parent_id => comment.id), class:'btn btn-sm btn-outline-secondary' %>
                  <% if check_edit_rights(@current_user,comment) %>
                      <%= link_to "Edit", edit_post_comment_path(comment.post, comment), class:'btn btn-sm btn-outline-secondary' %>
                      <%= link_to 'Destroy Comment', [comment.post, comment],
                                  method: :delete,
                                  data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-outline-secondary' %>
                  <% end  %>
                 </div>
              <% end  %>
            </p>
         </div>
      </div>
    </div>
  </div>
</div>