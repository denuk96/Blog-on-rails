<div class="container">
  <div class="coments">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card text-center">
          <p class="field">
            By
            <strong><%= comment.author.full_name  %></strong> <br>
           <span class="com_created"> Left <%= time_ago_in_words(comment.created_at) %> ago..</span>
          </p>
          <p class="field">
            "<%= comment.comment %>"
            <% if updated(comment) %>
            <p class="updated" italic">Edited <%= time_ago_in_words(comment.updated_at) %> ago..</p>
          <% end  %>
            </p>
            <p>
              <% if current_user %>
                <% if check_comment_rights(@current_user,comment) %>
                  <div class="btn-group" role="group" aria-label="Basic example">
                    <%= link_to "Edit", edit_post_comment_path(comment.post, comment), class:'btn btn-sm btn-outline-secondary' %>
                    <%= link_to 'Destroy Comment', [comment.post, comment],
                                method: :delete,
                                data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-outline-secondary' %>
                  </div>
                <% end  %>
              <% end  %>
            </p>
         </div>
      </div>
    </div>
  </div>
</div>
