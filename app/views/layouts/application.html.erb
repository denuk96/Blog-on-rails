<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h4 class="my-0 mr-md-auto font-weight-normal">Blog on Rails</h4>
      <nav class="my-2 my-md-0 mr-md-3">
        <%= link_to 'Home', posts_path, class: 'btn btn-primary' %>
        <% if user_signed_in? %>
          <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
        <% else %>
          <%= link_to 'New Post', new_post_path, class: 'btn btn-primary disabled' %>
        <% end %>
      </nav>
      <% if user_signed_in? %>
        <%= link_to 'Log out', destroy_user_session_path, class: 'btn btn-outline-primary', method: :delete, data: { confirm: 'Are you sure?' } %>
      <% else %>
        <%= link_to 'Log in', new_user_session_path, class: 'btn btn-outline-primary' %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-outline-primary' %>
      <% end %>
    </div>

<!--    <p class="notice"><%#= notice %></p>-->
<!--    <p class="alert"><%#= alert %></p>-->

    <%= yield %>
    <footer>
      <% if user_signed_in? %>
        <% if current_user.admin == true %>
        <% else %>
          <div class="alert alert-primary" role="alert">
            To get admin`s rules(edit, destroy) - admin@example.com, password 'blabla'
          </div>
        <% end %>
      <% else %>
        <div class="alert alert-primary" role="alert">
          To get admin`s rules(edit, destroy) - admin@example.com, password 'blabla'
        </div>
      <% end %>
    </footer>

  </body>
</html>
