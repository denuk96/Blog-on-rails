<div class="card-deck mb-3 text-center">
  <div class="card mb-4 shadow-sm">
    <div class="card-header">
      <h3 class="my-0 font-weight-normal"><strong><%= @post.title %></strong></h3>
      <h4 class="my-0 font-weight-small"><%= @post.author.first_name %> <%= @post.author.last_name %></h4>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @post.content %></p>
      <ul class="list-unstyled mt-3 mb-4">
        <% if user_signed_in? %>
          <% if current_user.admin == true %>
            <li><%= link_to 'Edit', edit_post_path(@post), class:'btn btn-warning btn-lg btn-block' %></li>
            <li><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-lg btn-block' %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>


<%= render @post.comments %>
