<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card text-center">
        <img src="<%= rails_blob_url(@post.picture) %>" class="card-img-top" alt="...">
        <div class="card-header">
          By <span class="show_name"><%= @post.author.full_name %></span><br>

        </div>
        <div class="card-body">
          <h5 class="card-title "><strong><%= @post.title %></strong></h5>
          <p class="card-text"><%= sanitize @post.content %></p>
          <% if updated(@post) %>
            <p class="updated">Edited <%= time_ago_in_words(@post.updated_at) %> ago..</p>
          <% end  %>
          <div class="btn-group" role="group" aria-label="Basic example">
            <% if current_user %>
              <% if @post.author_id == @current_user.id or @current_user.admin == true %>
                <%= link_to 'Edit', edit_post_path(@post), class:'btn btn-outline-warning' %>
                <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %>
              <% end  %>
            <% end  %>
          </div>
        </div>
        <div class="card-footer text-muted">
          <%= fa_icon "calendar" %> <%= time_ago_in_words(@post.created_at) %> <%= fa_icon "eye" %> <%= @post.impressionist_count %>
        </div>
      </div>
    </div>
  </div>
</div>


<h2>Comments</h2>
<%= render @post.comments %>
<% if current_user %>
  <%= render 'comments/form' %>
<% else %>
  <div class="container">
    <div class="alert alert-warning" role="alert">
      Log in to leave comments!
    </div>
  </div>
<% end  %>