<div class="card-deck mb-3 text-center">
  <div class="card mb-4 shadow-sm">
    <div class="card-header">
      <h3 class="my-0 font-weight-normal"><strong><%= @post.title %></strong></h3>
      <h4 class="my-0 font-weight-small"><%= @post.name %></h4>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @post.content %></p>
      <ul class="list-unstyled mt-3 mb-4">
        <% if user_signed_in? %>
          <% if current_user.admin == true %>
            <li><%= link_to 'Edit', edit_post_path(@post), class:'btn btn-warning btn-lg btn-block' %></li>
            <li><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-lg btn-block' %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter_name %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.comment %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :commenter_name %><br>
    <%= form.text_field :commenter_name %>
  </p>
  <p>
    <%= form.label :comment %><br>
    <%= form.text_area :comment %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
