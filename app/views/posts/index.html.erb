<div class="container">
    <div class="row">
      <% @posts.each do |post| %>
      <div class="col-md-4">
        <div class="card-deck mb-3 text-center">
            <div class="card mb-4 shadow-sm">
            <div class="card-header">
              <h3 class="my-0 font-weight-normal"><%= post.title %></h3>
            </div>
            <div class="card-body">
              <p class="card-text"><%= post.content %></p>
              <ul class="list-unstyled mt-3 mb-4">
                <li><%= link_to 'Show', post, class:'btn btn-info btn-lg btn-block' %></li>
                <% if user_signed_in? %>
                  <% if current_user.admin == true %>
                    <li><%= link_to 'Edit', edit_post_path(post), class:'btn btn-warning btn-lg btn-block' %></li>
                    <li><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-lg btn-block' %></li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>