<div class="row mb-2">
  <% @posts.each do |post| %>
    <div class="col-md-6 fix_v">
      <div class="card flex-md-row mb-4 shadow-sm h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <strong class="d-inline-block mb-2 text-primary">By <%= post.author.full_name %></strong>
          <h3 class="mb-0">
            <%= link_to(post) do %>
              <strong><%= post.title %></strong>
            <% end %>
          </h3>
          <div class="mb-1 text-muted"><%= fa_icon "calendar" %> <%= time_ago_in_words(post.created_at) %>        <%= fa_icon "eye" %> <%= post.impressionist_count %></div>
          <p class="card-text mb-auto"><%=h truncate(sanitize post.content, :length => 150 ) %>  <%= link_to 'Read more', post %></p>
          <p>

          </p>
        </div>
        <div><img src= <%= rails_blob_url(post.picture) %>></div>
      </div>
    </div>
  <% end %>
</div>

