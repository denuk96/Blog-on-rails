<div class="container">
    <div class="row">
      <% @posts.each do |post| %>
      <div class="col-md-4">
        <div class="card-deck mb-3 text-center">
            <div class="card mb-4 shadow-sm">
            <div class="card-header">
              <h3 class="my-0 font-weight-normal"><%= post.title %></h3>
            </div>
            <div class="card-body"><%= post.author.full_name %> <div/>
              <p class="card-text"><%= post.content %></p>


                <% if user_signed_in? %>
                  <% if current_user.admin == true %>
                  <div class="btn-group" role="group">
                    <%= link_to 'Show', post, class:'btn btn-info' %>
                    <%= link_to 'Edit', edit_post_path(post), class:'btn btn-warning' %>
                    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
                  </div>
                  <% end %>
                <% else %>
                  <%= link_to 'Show', post, class:'btn btn-info btn-block' %>
                <% end %>


            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

