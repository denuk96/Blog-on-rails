<div class="container">
  <div class="index">
    <div class="row mb-2">
      <% if @posts.present? %>
        <% @posts.each do |post| %>
          <div class="col-md-6 ">
            <div class="card flex-md-row mb-4 shadow-sm h-md-250 fix_v">
              <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary">By <span class="show_name"><%= post.author.full_name %></span></strong>
                <h3 class="mb-0">
                  <%= link_to(post) do %>
                    <strong><%= post.title %></strong>
                  <% end %>
                </h3>
                <div class="mb-1 text-muted"> <span data-toggle="tooltip" data-placement="top" title="(<%=post.created_at  %>)">
                 <%= fa_icon "calendar" %> <%= time_ago_in_words(post.created_at) %>
                 </span>  <%= fa_icon "eye" %> <%= post.impressionist_count %></div>
                <p class="card-text mb-auto"><%=h truncate(post.content, :length => 100 ) %>  <%= link_to 'Read more', post %></p>            </div>
              <div class="img"><img src= <%= rails_blob_url(post.picture) %>></div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="container">
          <p class="search alert alert-secondary">There are no posts containing the term(s) <%= params[:search] %>.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>


