<div class="container">
  <%= form_tag password_resets_path, method: :post do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], class:'form-control' %>
    </div>
    <div class=""><%= submit_tag "Reset Password", class:'btn btn-info btn-lg btn-block' %></div>
  <% end %>
</div>